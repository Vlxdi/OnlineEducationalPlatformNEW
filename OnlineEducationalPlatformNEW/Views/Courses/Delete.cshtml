@model OnlineEducationalPlatformNEW.Models.Courses

@{
    ViewData["Title"] = "Delete";
}
<style>
    .btn {
        transition: transform 0.2s, color 0.3s, filter 0.3s;
    }

        .btn:hover {
            color: #fff;
            filter: brightness(80%);
        }

        .btn:active {
            transform: perspective(170px) rotateX(35deg) translateY(2px);
        }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Courses</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <div class="form-group d-flex gap-2" style="margin-top: 1rem;">
        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <button onclick="location.href='@Url.Action("Index")'" class="btn btn-secondary">Back to List</button>
    </div>
</div>
