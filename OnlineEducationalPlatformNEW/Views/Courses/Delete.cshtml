@model OnlineEducationalPlatformNEW.Models.Courses

@{
    ViewData["Title"] = "Delete";
}
<style>
    .btn {
        transition: transform 0.2s, color 0.3s, filter 0.3s;
    }

        .btn:hover {
            color: #fff;
            filter: brightness(80%);
        }

        .btn:active {
            transform: perspective(170px) rotateX(35deg) translateY(2px);
        }
</style>
<h1>Delete</h1>

<h3 class="user-select-none">Are you sure you want to delete this?</h3>
<div class="user-select-none">
    <h4>Courses</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <p style="font-weight: 700">Id:</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class="col-sm-2">
            <p style="font-weight: 700">Name:</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <p style="font-weight: 700">Description:</p>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Description == null)
            {
                <p>None</p>
            }
            else
            {
                @Html.DisplayFor(model => model.Description)
            }
        </dd>
        <dt class="col-sm-2">
            <p style="font-weight: 700">Creation Date:</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        @* <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.OwnerId)
        </dd> *@
    </dl>
    <div class="form-group d-flex gap-2" style="margin-top: 1rem;">
        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <button onclick="location.href='@Url.Action("Index")'" class="btn btn-secondary">Back to List</button>
    </div>
</div>
