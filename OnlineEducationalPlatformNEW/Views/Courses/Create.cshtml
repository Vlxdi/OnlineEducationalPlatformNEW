@model OnlineEducationalPlatformNEW.Models.Courses

@{
    ViewData["Title"] = "Create";
}
<style>
    .btn{
        transition: transform 0.2s, color 0.3s, filter 0.3s;
    }

    .btn:hover{
        color: #fff;
        filter: brightness(80%);
    }

    .btn:active{
        transform: perspective(170px) rotateX(35deg) translateY(2px);
    }
</style>
<h1 class="user-select-none">Create</h1>

<h4 class="user-select-none">Courses</h4>
<hr />
<div class="row user-select-none">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-center gap-2 mt-2">
                <label asp-for="IsPublic" class="control-label">Public</label>
                <input asp-for="IsPublic" class="form-check-input h4 w4" />
                <span asp-validation-for="IsPublic" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group d-flex gap-2" style="margin-top: 1rem;">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button type="button" class="btn btn-secondary btn-md" onclick="location.href='@Url.Action("Index")'">Back to List</button>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
